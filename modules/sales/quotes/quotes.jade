block content
	style.
		.action-icon, .state-icon {
			-webkit-border-radius: 3px;
			-moz-border-radius: 3px;
			-ms-border-radius: 3px;
			-o-border-radius: 3px;
			border-radius: 3px;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
			display: -moz-inline-stack;
			display: inline-block;
			vertical-align: middle;
			zoom: 1;
			min-width: 58px;
			padding: 6px 4px 5px 4px;
			line-height: 7px;
			text-align: center;
			text-transform: uppercase;
			font-size: 9px;
			color: #fff;
			font-weight: 600;
		}	

		.action-icon.draft,.action-icon.new_note,.action-icon.edit_note,
		.state-icon.draft,.state-icon.new_note,.state-icon.edit_note,
		.action-image-icon:hover.draft,.action-image-icon:hover.new_note,.action-image-icon:hover.edit_note,
		.action-image-icon.color.draft,.action-image-icon.color.new_note,
		.action-image-icon.color.edit_note{
			background-color:#ee9422;
			/*
			
			border:1px solid #d62600;
			text-shadow:0px 1px 0px #d83c08;-webkit-box-shadow:inset 0px 1px 2px 0px #e1630a;
			-moz-box-shadow:inset 0px 1px 2px 0px #e1630a;box-shadow:inset 0px 1px 2px 0px #e1630a;
			
			background-image:url("data:image/svg+xml;base64,");
			*/
			background-size:100%;
			background-image:-webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #ee9422), color-stop(100%, #e05f08));
			background-image:-webkit-linear-gradient(top, #ee9422 0%, #e05f08 100%);
			background-image:-moz-linear-gradient(top, #ee9422 0%, #e05f08 100%);
			background-image:-o-linear-gradient(top, #ee9422 0%, #e05f08 100%);
			background-image:linear-gradient(top, #ee9422 0%,#e05f08 100%)
		}

		.action-icon.closed,
		.state-icon.closed,
		.action-image-icon:hover.closed,
		.action-image-icon.color.closed{
			background-color:#999
		}

				
