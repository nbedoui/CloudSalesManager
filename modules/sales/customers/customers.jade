extends ../../../views/index

block content
	style.
		
		.address{
			font-size : 11px;
			margin-bottom : 3px;
		}

		.address span, .address span a {
			color : #fefefe;
		}

		@media only screen and (min-width: 760px) {
			.phones {
				width : 110px;
				margin : auto;
				text-align : left;
			}
		}

		
		

	.container(style="margin-top: 15px;")
		div.header
			div.section-title
				.win-commandlayout.win-ui-dark.pull-left
					a(href="/sales").win-command.win-command-small
						span.win-commandicon.win-commandring.icon-arrow-left-14
						span.title - Clients

		
		div#customers-container.row-fluid(style="height:650px;").fg-color-white
			.row-fluid
				
				.win-commandlayout.win-ui-dark.pull-right
					a#searchBtn.win-command.win-command-small
						span.win-commandicon.win-commandring.icon-search-4
						span.win-label Rech.
					a#addBtn.win-command.win-command-small
						span.win-commandicon.win-commandring.icon-plus-5
						span.win-label Ajouter
					a#reloadBtn.win-command.win-command-small
						span.win-commandicon.win-commandring.icon-reload
						span.win-label Recharger

					a#prevBtn.win-command.win-command-small
						span.win-commandicon.win-commandring.icon-arrow-left-12
						span.win-label Préc.
					a#nextBtn.win-command.win-command-small
						span.win-commandicon.win-commandring.icon-arrow-right-11
						span.win-label Suiv.
				
				
			.row-fluid#searchPanel(style="display:none")
				form.well.form-inline
					select#searchFieldName
						option(value="productName") Nom
						option(value="productCategory") Catégorie
						option(value="item 3") Item 3
					span 
						| = 
					.input-append
						input#searchFieldValue.search-query(type="text", placeholder="Saisir le critère")
						button#search.btn(type="button")
							i.icon-search

			.row-fluid(style="height:500px;").fg-color-white

				div.list-container
					ul#customers-list.list-large

						
block script
	script(src="http://code.jquery.com/jquery-1.10.1.min.js")
	script(src="http://underscorejs.org/underscore-min.js") 
	script(src="http://backbonejs.org/backbone-min.js")
	//Templates
	script#customer-template(type="text/template")
		a(href="#", id!="<%=model._id%>").customerDetails
			div.picture
				img(src!="<%=model.logo%>")

			div.address
				H4.fg-color-greenLight <%=model.customerName%>
				<% _.each(model.addresses, function(address)  { %>
				span <%=address.street%>,  
				span <%=address.zipCode%> <%=address.city%>
				br 
				span <%=address.country%>
				<% }); %>
				br
				div.phones
					<% if (model.phone) { %>
					span(title="Phone")
						i.icon-phone-2
						|  : <%=model.phone%>
					<%}%>
					br
					<% if (model.mobile) { %>
					span(title="Mobile")
						i.icon-mobile-2
						|  : <%=model.mobile%>
					<%}%>
				br
				<% if (model.email) { %>
				span(title="Email")
					|  <%=model.email%>
				<%}%>
				
				h5.fg-color-orange Suivi par : <%=model.customer_owner.name.first%> <%=model.customer_owner.name.last%>

			
			
	script(src="/js/modules/sales/customers.js")


